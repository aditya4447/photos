<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.profile.ProfileFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ib_upload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/upload"
                android:text="@string/upload"
                android:textColor="@color/image_button_action_color"
                android:elevation="0dp"
                android:contentDescription="@string/upload_image"
                android:background="?selectableItemBackgroundBorderless"
                android:fontFamily="@font/barlow_condensed_light"
                android:textAllCaps="false"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="@id/img_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/img_dp"
                app:layout_constraintEnd_toStartOf="@id/img_dp"/>

            <ImageView
                android:id="@+id/img_dp"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/dp_background"
                android:contentDescription="@string/display_picture"
                android:src="@drawable/dp"
                app:clipToOutline="@{true}"
                app:layout_constraintEnd_toStartOf="@id/ib_edit"
                app:layout_constraintStart_toEndOf="@id/ib_upload"
                app:layout_constraintTop_toTopOf="parent"
                tools:clipToOutline="true"
                tools:ignore="ImageContrastCheck" />


            <Button
                android:id="@+id/ib_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/edit"
                android:text="@string/edit"
                android:textColor="@color/image_button_action_color"
                android:elevation="0dp"
                android:contentDescription="@string/edit_image"
                android:background="?selectableItemBackgroundBorderless"
                android:fontFamily="@font/barlow_condensed_light"
                android:textAllCaps="false"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="@id/img_dp"
                app:layout_constraintStart_toEndOf="@id/img_dp"
                app:layout_constraintBottom_toBottomOf="@id/img_dp"
                app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                android:id="@+id/txt_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:text="john.doe"
                android:textAlignment="center"
                android:fontFamily="@font/barlow_extra_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/txt_my_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/my_dashboard"
                android:fontFamily="@font/barlow_condensed_light"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintTop_toTopOf="@id/switch_dashboard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/switch_dashboard"
                app:layout_constraintBottom_toBottomOf="@id/switch_dashboard" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:checked="true"
                android:thumb="@drawable/switch_thumb"
                app:trackTint="@color/switch_track"
                app:switchMinWidth="58dp"
                app:layout_constraintTop_toBottomOf="@id/txt_username"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_my_dashboard" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/switch_dashboard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txt_followers_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.3K"
                android:textSize="24sp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/barlow_condensed_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txt_artworks_count"
                app:layout_constraintTop_toBottomOf="@id/divider"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/txt_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/followers"
                android:fontFamily="@font/barlow_condensed_light"
                app:layout_constraintTop_toBottomOf="@id/txt_followers_count"
                app:layout_constraintStart_toStartOf="@id/txt_followers_count"
                app:layout_constraintEnd_toEndOf="@id/txt_followers_count"
                />
            <TextView
                android:id="@+id/txt_artworks_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="24sp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/barlow_condensed_light"
                app:layout_constraintStart_toEndOf="@id/txt_followers_count"
                app:layout_constraintEnd_toStartOf="@id/txt_exhibitions_count"
                app:layout_constraintTop_toBottomOf="@id/divider"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/txt_artworks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/artworks"
                android:fontFamily="@font/barlow_condensed_light"
                app:layout_constraintTop_toBottomOf="@id/txt_artworks_count"
                app:layout_constraintStart_toStartOf="@id/txt_artworks_count"
                app:layout_constraintEnd_toEndOf="@id/txt_artworks_count"
                />
            <TextView
                android:id="@+id/txt_exhibitions_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:textSize="24sp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/barlow_condensed_light"
                app:layout_constraintStart_toEndOf="@id/txt_artworks_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/txt_exhibitions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exhibitions"
                android:fontFamily="@font/barlow_condensed_light"
                app:layout_constraintTop_toBottomOf="@id/txt_exhibitions_count"
                app:layout_constraintStart_toStartOf="@id/txt_exhibitions_count"
                app:layout_constraintEnd_toEndOf="@id/txt_exhibitions_count"
                />

            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/barlow_condensed_light"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/txt_followers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/img_likes"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:src="@drawable/heart"
                android:layout_marginTop="2dp"
                android:contentDescription="@string/likes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_likes"
                app:layout_constraintBottom_toBottomOf="@id/txt_likes"
                app:layout_constraintEnd_toStartOf="@id/txt_likes"
                app:layout_constraintHorizontal_chainStyle="packed"
                />

            <TextView
                android:id="@+id/txt_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="4dp"
                android:textSize="18sp"
                android:text="120"
                android:fontFamily="@font/barlow_extra_light"
                app:layout_constraintStart_toEndOf="@id/img_likes"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                app:layout_constraintEnd_toStartOf="@id/img_comments"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/img_comments"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:src="@drawable/plane"
                android:layout_marginTop="2dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/comments"
                app:layout_constraintStart_toEndOf="@id/txt_likes"
                app:layout_constraintTop_toTopOf="@id/txt_comments"
                app:layout_constraintBottom_toBottomOf="@id/txt_comments"
                app:layout_constraintEnd_toStartOf="@id/txt_comments"
                />

            <TextView
                android:id="@+id/txt_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="4dp"
                android:textSize="18sp"
                android:text="43K"
                android:fontFamily="@font/barlow_extra_light"
                app:layout_constraintStart_toEndOf="@id/img_comments"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                app:layout_constraintEnd_toStartOf="@id/img_shares"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/img_shares"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:src="@drawable/share"
                android:layout_marginTop="2dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/shares"
                app:layout_constraintStart_toEndOf="@id/txt_comments"
                app:layout_constraintTop_toTopOf="@id/txt_shares"
                app:layout_constraintBottom_toBottomOf="@id/txt_shares"
                app:layout_constraintEnd_toStartOf="@id/txt_shares"
                />

            <TextView
                android:id="@+id/txt_shares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:textSize="18sp"
                android:text="2.3K"
                android:fontFamily="@font/barlow_extra_light"
                app:layout_constraintStart_toEndOf="@id/img_shares"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText" />

            <View
                android:id="@+id/palette_1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/sample_1"
                android:foreground="?selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_likes"
                app:layout_constraintEnd_toStartOf="@id/palette_2"
                android:layout_marginTop="18dp" />
            <View
                android:id="@+id/palette_2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/sample_2"
                android:foreground="?selectableItemBackground"
                app:layout_constraintStart_toEndOf="@id/palette_1"
                app:layout_constraintTop_toBottomOf="@id/img_likes"
                app:layout_constraintEnd_toStartOf="@id/palette_3"
                android:layout_marginTop="18dp" />
            <View
                android:id="@+id/palette_3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/sample_3"
                android:foreground="?selectableItemBackground"
                app:layout_constraintStart_toEndOf="@id/palette_2"
                app:layout_constraintTop_toBottomOf="@id/img_likes"
                app:layout_constraintEnd_toStartOf="@id/palette_4"
                android:layout_marginTop="18dp" />
            <View
                android:id="@+id/palette_4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/sample_4"
                android:foreground="?selectableItemBackground"
                app:layout_constraintStart_toEndOf="@id/palette_3"
                app:layout_constraintTop_toBottomOf="@id/img_likes"
                app:layout_constraintEnd_toStartOf="@id/palette_5"
                android:layout_marginTop="18dp" />
            <View
                android:id="@+id/palette_5"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/sample_5"
                android:foreground="?selectableItemBackground"
                app:layout_constraintStart_toEndOf="@id/palette_4"
                app:layout_constraintTop_toBottomOf="@id/img_likes"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="18dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/palette"
                android:textColor="@color/white"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="@id/palette_1"
                app:layout_constraintEnd_toEndOf="@id/palette_5"
                app:layout_constraintTop_toTopOf="@id/palette_1"
                app:layout_constraintBottom_toBottomOf="@id/palette_1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ib_uploads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:drawableTop="@drawable/upload_with_state"
                android:text="@string/uploads"
                android:textColor="@color/large_image_button_tint"
                android:elevation="0dp"
                android:contentDescription="@string/uploads"
                android:background="@drawable/large_image_button_background"
                android:fontFamily="@font/barlow_medium"
                android:textAllCaps="false"
                app:selected="@{true}"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toBottomOf="@id/palette_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ib_exhibitions"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ib_exhibitions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:drawableTop="@drawable/image"
                android:text="@string/exhibitions"
                android:textColor="@color/large_image_button_tint"
                android:elevation="0dp"
                android:contentDescription="@string/exhibitions"
                android:background="@drawable/large_image_button_background"
                android:fontFamily="@font/barlow_medium"
                android:textAllCaps="false"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toBottomOf="@id/palette_1"
                app:layout_constraintStart_toEndOf="@id/ib_uploads"
                app:layout_constraintEnd_toStartOf="@id/ib_revenue"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ib_revenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:drawableTop="@drawable/coins"
                android:text="@string/revenue"
                android:textColor="@color/large_image_button_tint"
                android:elevation="0dp"
                android:contentDescription="@string/revenue"
                android:background="@drawable/large_image_button_background"
                android:fontFamily="@font/barlow_medium"
                android:textAllCaps="false"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toBottomOf="@id/palette_1"
                app:layout_constraintStart_toEndOf="@id/ib_exhibitions"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
